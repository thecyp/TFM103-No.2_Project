<script src="~/jquery/jquery.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/jquery-twzipcode@1.7.14/jquery.twzipcode.min.js"></script>
<script>
    $(document).ready(function () {
        $("#twzipcode").twzipcode({
            zipcodeIntoDistrict: true, // 郵遞區號自動顯示在區別選單中
            css: ["city form-control", "town form-control"], // 自訂 "城市"、"地別" class 名稱
            countyName: "countyName", // 自訂城市 select 標籤的 name 值
            districtName: "districtName" // 自訂區別 select 標籤的 name 值
        });
    });
</script>
<div id="launch">
    <form enctype="multipart/form-data" action="~/Product/Upload" method="post">
        <h1>服務上架</h1>
        <div class="form-row">
            <div class="form-group col-md-12">
                <label for="name">服務名稱:</label>
                <input type="text" class="form-control" id="name" name="ProductName">
            </div>
        </div>
        <label>服務地點:</label>
        <div id="twzipcode" class="form-group input-group">
            <div class="input-group-prepend">
                <span class="input-group-text" name="Address"> <i class="fas fa-map-marker-alt"></i> </span>
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-12">
                <label>服務敘述:</label>
                <br />
                <textarea name="Description" style="width:100%;height:100px"></textarea>
            </div>
        </div>
        <label>服務價格:</label>
        <div class="form-row">
            <input class="form-group col-md-2" type="number" name="Price" />
        </div>
        <div>
            <label>上傳圖片</label>
            <br />
            <input type="file" name="pic" id="inputpic" />
        </div>
        <br />
        <button>確認</button>
    </form>
</div>

<style>
    body {
        background-color: #C5E1A5
    }

    #launch {
        background-color: #F1F8E9;
        padding: 20px;
        margin-top: 30px;
        border-radius:20px
    }

    h1 {
        color: #616161;
    }
</style>

