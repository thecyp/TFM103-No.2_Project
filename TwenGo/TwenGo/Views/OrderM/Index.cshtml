                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.isPaid)
                            </td>
                            @*<td>
                                    @Html.DisplayFor(modelItem => item.Status)
                                </td>*@
                            <td>
                                <a asp-action="Details" asp-route-id="@item.Id">Details</a>
