@using Microsoft.AspNetCore.Identity
@using TwenGo.Models.Repository.Entity;
@inject SignInManager<Users> SignInManager
@inject UserManager<Users> UserManager

<ul class="topbar-menu">
    @if (SignInManager.IsSignedIn(User))
    {
        <li><a class="" asp-area="Identity"asp-controller="Home" asp-action="Index" title="會員資料"> @User.Identity.Name</a></li>
        <li><form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button type="submit" class="nav-link btn btn-link text-dark">登出</button></form></li>
    }
    else
    {
        <li><a asp-area="" asp-controller="UserCenter" asp-action="Index">會員中心</a></li>
        <li><a asp-area="" asp-controller="Login" asp-action="Index">登入</a></li>
        <li><a asp-area="" asp-controller="Member" asp-action="CustomerRegister">註冊</a></li>
       
    }
</ul>
