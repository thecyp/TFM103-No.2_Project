@model IEnumerable<TwenGo.Models.Order>

@{
    ViewData["Title"] = "訂單總覽";
}

@*管理者*@


<div class="section border-bottom pt-2 pb-2">
    <div class="container">
        <div class="row">
            <div class="col-sm-12">
                <ul class="breadcrumbs">
                    <li><a a asp-controller="Home" asp-action="index">首頁</a></li>
                    <li>訂單管理</li>
                </ul>
            </div>
        </div>
    </div>
</div>

<div class="text-center">
    <p></p>
    <h4>訂單管理</h4>
    <p></p>
</div>



<div class="container">
    <div class="tab-pane active" id="home">
        <table class="table table-success table-striped">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.OrderDate)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.UserName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ReceiverName)
                    </th>

                    <th>
                        @Html.DisplayNameFor(model => model.Total)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.isPaid)
                    </th>

                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.OrderDate)
                        </td>

                        <td>
                            @Html.DisplayFor(modelItem => item.UserName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ReceiverName)
                        </td>

                        <td>
                            @Html.DisplayFor(modelItem => item.Total)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.isPaid)
                        </td>

                        <td>
                            <a class="btn btn-sm btn-outline-secondary" asp-action="Details" asp-route-id="@item.Id"><i class="fa fa-list-ul"></i>訂單資訊</a>
                        </td>
                        <td>
                            <a class="btn btn-sm btn-outline-secondary" asp-action="Delete" asp-route-id="@item.Id"><i class="fa fa-remove"></i>刪除</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>


