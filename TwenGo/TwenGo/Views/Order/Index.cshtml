@model TwenGo.Models.Order

@{ ViewData["Title"] = "Order"; }
<body>
    <div class="section border-bottom pt-2 pb-2">
        <div class="container">
            <div class="row">
                <div class="col-sm-12">
                    <ul class="breadcrumbs">
                        <li><a a asp-controller="Home" asp-action="index">首頁</a></li>
                        <li><a asp-controller="Shop" asp-action="index">商品</a></li>
                        <li> <a asp-controller="Cart" asp-action="index">購物車</a></></li>
                        <li>訂單資料</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>

    <h4 style="padding-top: 20px;">訂單資料</h4>
    <hr />
    <form asp-action="CreateOrder" id="orderForm" method="post">
        <div class="text-danger"></div>
        <input type="hidden" />
        <div class="row">
            <div class="col-8">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">付款人資料</h5>
                        <div class="form-group">
                            <label class="control-label">付款人ID</label>
                            <input asp-for="UserId" readonly class="form-control" />
                        </div>
                        <div class="form-group">
                            <label class="control-label">付款人帳號</label>
                            <input asp-for="UserName" value="@User.Identity.Name" readonly class="form-control" />
                        </div>
                    </div>
                </div>
                <p></p>
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">預約資料</h5>
                        <div class="row">
                            <div class="form-group col-8">
                                <label class="control-label">預約日期</label>
                                <input asp-for="ReciveDate" class="form-control" />
                                <span class="text-danger"></span>
                            </div>
                            <div class="form-group col-6">
                                <label asp-for="ReceiverName" class="control-label">預約姓名</label>
                                <input asp-for="ReceiverName" placeholder="#必填" class="form-control" />
                                <span asp-validation-for="ReceiverName" class="text-danger"></span>
                            </div>
                            <div class="form-group col-8">
                                <label asp-for="ReceiverPhone" class="control-label">預約電話</label>
                                <input asp-for="ReceiverPhone" placeholder="#必填" class="form-control" />
                                <span asp-validation-for="ReceiverPhone" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <label asp-for="ReceiverAddress" class="control-label">預約地址</label>
                            <input asp-for="ReceiverAddress" placeholder="#必填" class="form-control" />
                            <span asp-validation-for="ReceiverAddress" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Memo" class="control-label">備註</label>
                            <textarea asp-for="Memo" style="height:200px" form="orderForm" placeholder="#選填" class="form-control"></textarea>
                            <span asp-validation-for="Memo" class="text-danger"></span>
                        </div>
                    </div>
                </div>

            </div>
            <div id="OrderPage" class="col-md-4">
                <div class="cart-totals">
                    <input type="hidden" />
                    <div class="card-body">
                        <h5 class="card-text" style="font-size:30px">訂單內容</h5>
                        <table class="table table-borderless">
                            <thead v-for="item in product">
                                <tr>品項:</tr>
                                <tr>
                                    <th>{{item.name}}</th>
                                    <td>x{{item.amount}}</td>
                                </tr>
                            </thead>
                            <tbody>
                            </tbody>
                        </table>
                        <hr />
                        <div class="text-right">
                            <input type="hidden" asp-for="Total"/>
                            <p class="card-text font-weight-bolder" style="padding-right:12px; font-size:larger">總金額:　NT$ @Model.Total</p>
                        </div>
                        <p></p>
                        <div class="text-center card-link" style="margin-top:100px">
                            <button type="submit" class="continue-shopping w-75">建立訂單</button>
                        </div>
                        <div align="center" style="margin-top:30px">
                            <button class="btn btn-3 w-50" asp-controller="Cart" asp-action="Index"><i class="fas fa-angle-left"></i> 返回購物車</button>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </form>

    <script>
        var vorder = new Vue({
            el: '#OrderPage',
            data: {
                product: []
            },
            mounted: function () {
                this.GetCartProduct();
            },
            methods: {
                GetCartProduct: function () {
                    let self = this;
                    fetch("/Cart/GetCart")
                        .then(function (res) { return res.json() })
                        .then(function (d) { self.product = d })
                },
            },

        });
    </script>
</body>
